<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
    <div id="errorExplaination">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
    
    <table>
    <tr class="field">
        <td class="label"><%= f.label :email %></td>
        <td class="input obligatory"><%= f.text_field :email %></td>
    </tr>
    <tr class="field">
        <td class="label"><%= f.label :fullname %></td>
        <td class="input optional"><%= f.text_field :fullname %></td>
    </tr>
    <tr class="field">
        <td class="label"><%= f.label :password %></td>
        <td class="input obligatory"><%= f.password_field :password %></td>
    </tr>
    <tr class="field">
        <td class="label"><%= f.label :password_confirmation %></td>
        <td class="input obligatory"><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr class="actions">
        <td colspan="2" class="action"><%= f.image_submit "save_button.png" %></td>
    </tr>
<% end %>

    
    