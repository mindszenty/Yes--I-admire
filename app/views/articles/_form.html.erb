<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
  <tr class="field">
    <td class="label"><%= f.label :title %></td>
    <td class="input obligatory"><%= f.text_field :title %></td>
  </tr>
  <tr class="field">
    <td class="label"><%= f.label :body %></td>
    <td class="input_text"><%= f.text_area :body %></td>
  </tr>
  <tr class="field">
    <td class="label"><%= f.label :source %></td>
    <td class="input optional"><%= f.text_field :source %></td>
  </tr>
  <tr class="field">
    <td class="label"><%= f.label :tags_string %></td>
    <td class="input optional"><%= f.text_field :tags_string %></td>
  </tr>
  <tr class="field">
      <td class="label"><%= f.label :category_id %></td>
      <td class="input_select"><%= f.collection_select :category_id, Category.all, :id, :title %></td>
  </tr>
    <tr class="actions">
        <td colspan="2" class="action"><%= image_submit_tag "publish_button.png" %></td>
    </tr>
  </table>
<% end %>
