<td class="total_rating"><div><%= article.total_rating %></div></td>
<% if logged_in? %>
<td class="rate">
<div>
<%= link_to image_tag(article.rating_by(current_user)==1 ? "star_on.png" : "star_off.png"), star_path(article, :format => :js), :remote => true, :id => 'star_link' %><br/>
<%= link_to image_tag(article.rating_by(current_user)==-1 ? "cross_on.png" : "cross_off.png"), cross_path(article, :format => :js), :remote => true, :id => 'cross_link' %>
</div></td>
<% end %>

